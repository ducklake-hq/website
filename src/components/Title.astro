---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<div class="container">
    <!-- <img class="logo-img" src="/images/logo_dark.png" /> -->
    <h1 class="title text-gradient">{ title }</h1>
</div>

<style scoped>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
    }
    .logo-img {
        margin-right: 12px;
        height: 90px;
    }
    .title {
        font-family: "MontserratAlt1-Light";
        font-family: Inter, ui-sans-serif, system-ui;
        font-size: 100%;
        line-height: 1em;
        padding-top: 1%;
        font-weight: bold;
        margin: 0;
        /* text-transform: uppercase; */
        font-size: 56px;
        color: var(--theme-color-brand4);

        background-clip: text;
        color: transparent;
        background-image: hsla(33, 84%, 68%, 1);

        background-image: linear-gradient(
            45deg,
            rgb(255, 234, 0) 0%,
            var(--theme-color-brand1) 40%,
